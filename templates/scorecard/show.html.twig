{% extends 'base.html.twig' %}

{% block title %}{{'Scorecard'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Scorecard'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scorecard.id }}</td>
            </tr>
            <tr>
                <th>{{'Label'|trans}}</th>
                <td>{{ scorecard.label }}</td>
            </tr>
            <tr>
                <th>{{'Counters'|trans}}</th>
                <td>
                {% for counter in scorecard.counter %}
                    {{ counter }}<br/>

                {% else %}
                    {{'no counter found'|trans}}
                    </td>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('scorecard_index') }}">{{'back to list'|trans}}</a>

    <a href="{{ path('scorecard_edit', {'id': scorecard.id}) }}">{{'edit'|trans}}</a>

    {{ include('scorecard/_delete_form.html.twig') }}
{% endblock %}
