{% extends 'base.html.twig' %}

{% block title %}Scorecard{% endblock %}

{% block body %}
    <h1>Scorecard</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ scorecard.id }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ scorecard.label }}</td>
            </tr>
            <tr>
                <th>Compteurs</th>
