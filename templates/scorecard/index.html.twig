{% extends 'base.html.twig' %}

{% block title %}{{'Scorecard index'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Scorecard index'|trans}}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'Label'|trans}}</th>
                <th>{{'Counters'|trans}}</th>
                <th>{{'actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for scorecard in scorecards %}
            <tr>
                <td>{{ scorecard.id }}</td>
                <td>{{ scorecard.label }}</td>
                <td>
                    {% for counter in scorecard.counter %}
                        {{ counter }}<br/>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('scorecard_show', {'id': scorecard.id}) }}">{{'show'|trans}}</a>
                    <a href="{{ path('scorecard_edit', {'id': scorecard.id}) }}">{{'edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{'no records found'|trans}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('scorecard_new') }}">{{'Create new'|trans}}</a>
{% endblock %}
