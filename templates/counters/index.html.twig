{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/counters.css') }}" type="text/css" rel="stylesheet" />
{% endblock %}

{% block body %}
    <div class="wrap-evaluation-information">
        <div>
            <h3>Subject : </h3>
            <h3>Communication Ressources Humaines</h3>
        </div>
        <div>
            <h3>Evaluation : </h3>
            <h3>Oral - 02/10/2020</h3>
        </div>
    </div>

    <div class="wrap-text">
        <div class="student-information">
            <h3>student :</h3>
            <h4 class="student-name">Alexandra PICHOT</h4>
            <h4 class="student-grade">Terminale STMG</h4>
        </div>
        <div class="evaluation-description">
            <h3>description :</h3>
            <h4>Résumé du cours précédent</h4>
        </div>
        <div class="professor-information">
            <h3>professor :</h3>
            <h4>M. THOMAS</h4>
        </div>
    </div>

    <div class="wrap-counters">
        <div class="first-note" data-new-note-first-cpt="{{ newNote1 }}" data-old-note-first-cpt="{{ oldNote1 }}">
            <img src="assets/images/counters/jauge-1.png"/>
            <img class="aiguillePreviousNote" src="assets/images/counters/ancienne_note.png"/>
            <img class="aiguilleNewNote" src="assets/images/counters/nouvelle_note.png"/>
            <h3 class="subject1">test1</h3>
            <p>25%</p>
        </div>
        <div class="second-note" data-new-note-second-cpt="{{ newNote2 }}" data-old-note-second-cpt="{{ oldNote2 }}">
            <img src="assets/images/counters/jauge-1.png"/>
            <img class="aiguillePreviousNote" src="assets/images/counters/ancienne_note.png"/>
            <img class="aiguilleNewNote" src="assets/images/counters/nouvelle_note.png"/>
            <h3 class="subject2">test2</h3>
            <p>25%</p>
        </div>
        <div class="third-note" data-new-note-third-cpt="{{ newNote3 }}" data-old-note-third-cpt="{{ oldNote3 }}">
            <img src="assets/images/counters/jauge-1.png"/>
            <img class="aiguillePreviousNote" src="assets/images/counters/ancienne_note.png"/>
            <img class="aiguilleNewNote" src="assets/images/counters/nouvelle_note.png"/>
            <h3 class="subject3">test3</h3>
            <p>25%</p>
        </div>
        <div class="last-note" data-new-note-last-cpt="{{ newNote4 }}" data-old-note-last-cpt="{{ oldNote4 }}">
            <img src="assets/images/counters/jauge-1.png"/>
            <img class="aiguillePreviousNote" src="assets/images/counters/ancienne_note.png"/>
            <img class="aiguilleNewNote" src="assets/images/counters/nouvelle_note.png"/>
            <h3 class="subject4">test4</h3>
            <p>25%</p>
        </div>
    </div>

    <div class="legend">
        <h3>Legend</h3>
        <h4>
            Grey needles: Old notes
            <br/>
            Black needles: : New notes
        </h4>
    </div>

    <div class="comparison">
        <h3>Comparison of notes</h3>
        <div class="wrap-comparison">
            <div>
                <h4>Old note</h4>
                <h4 class="old-note-comparison-text"></h4>
                <p>(18/08/2020)</p>
            </div>
            <div>
                <img class="arrow-comparison" src="assets/images/counters/comparaison.png"/>
            </div>
            <div>
                <h4>New note</h4>
                <h4 class="new-note-comparison-text"></h4>
                <p>(02/10/2020)</p>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="assets/js/countersAndComparison.js"></script>
{% endblock %}