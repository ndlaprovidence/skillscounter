{% extends 'base.html.twig' %}

{% block title %}{{'Counter'|trans}}{% endblock %}

{% block body %}
    <h1>{{'Counter'|trans}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ counter.id }}</td>
            </tr>
            <tr>
                <th>{{'Label'|trans}}</th>
                <td>{{ counter.label }}</td>
            </tr>
            <tr>
                <th>{{'Coefficient'|trans}}</th>
                <td>{{ counter.coefficient }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('counter_index') }}">{{'back to list'|trans}}</a>

    <a href="{{ path('counter_edit', {'id': counter.id}) }}">{{'edit'|trans}}</a>

    {{ include('counter/_delete_form.html.twig') }}
{% endblock %}
