{% extends 'base.html.twig' %}

{% block title %}Classroom index{% endblock %}

{% block body %}
    <h1>Classroom index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for classroom in classrooms %}
            <tr>
                <td>{{ classroom.id }}</td>
                <td>{{ classroom.name }}</td>
                <td>
                    <a href="{{ path('classroom_show', {'id': classroom.id}) }}">show</a>
                    <a href="{{ path('classroom_edit', {'id': classroom.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('classroom_new') }}">Create new</a>
{% endblock %}
